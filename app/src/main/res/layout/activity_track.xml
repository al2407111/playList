<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/trackImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/padding8"
        android:layout_marginBottom="@dimen/padding8"
        android:layout_marginStart="@dimen/padding13"
        tools:src="@drawable/ic_placeholder_image" />

    <LinearLayout
        style="@style/SettingsTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/padding8"
        android:layout_marginTop="@dimen/padding14">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/padding16"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Название трека:xxxxxxxxxxxxxxxxxxxxx" />

        <LinearLayout
            style="@style/SettingsTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            >

            <TextView
                style="@style/SettingsTextStyle"
                android:id="@+id/artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/padding11"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Имя трека:xxxxxxxxxxxxxxxxxxxxx" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_points"
                app:tint="@color/black" />
            <TextView
                style="@style/SettingsTextStyle"
                android:id="@+id/trackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/padding11"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="22:33" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/trackDetails"
        android:layout_width="24dp"
        android:layout_marginEnd="@dimen/padding19"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/ic_dark_accept"
        app:tint="@color/black" />
</LinearLayout>