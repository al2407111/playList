<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMenu">parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/padding0</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:layout_marginTop">@dimen/padding16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:layout_marginRight">@dimen/padding2</item>
        <item name="cornerRadius">@dimen/padding16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>


    </style>
    <style name="arrow">
        <item name="android:layout_gravity">start</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="icon">@drawable/ic_arrow</item>
    </style>
    <style name="SettingsMenuIcon">
        <item name="android:layout_width">@dimen/padding24</item>
        <item name="android:layout_height">@dimen/padding24</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/padding19</item>
        <item name="android:layout_marginRight">@dimen/padding12</item>
        <item name="android:layout_marginBottom">@dimen/padding18</item>
    </style>
<style name="SettingsMenu">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_marginStart">@dimen/padding16</item>
    <item name="android:layout_height">wrap_content</item>
<item name="android:orientation">vertical</item>
</style>
    <style name="SettingsMenuLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding20</item>
        <item name="android:paddingBottom">@dimen/padding20</item>
    </style>
    <style name="SettingsMenuText">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/padding16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="MainTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsTextStyle">
        <item name="android:layout_width">@dimen/padding24</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="ErrTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/search_err_icon</item>
    </style>


    <style name="SearchInputIcon">
        <item name="android:layout_width">@dimen/padding36</item>
        <item name="android:layout_height">@dimen/padding36</item>
        <item name="iconTint">@color/search_icon</item>
        <item name="tint">@color/search_icon</item>
    </style>

    <style name="SearchInputIconStart" parent="SearchInputIcon">
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginStart">@dimen/padding2</item>
    </style>

    <style name="SearchInputIconEnd" parent="SearchInputIcon">
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">@dimen/padding2</item>
    </style>



</resources>