<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorOnPrimary">@color/black</item>
        <item  name="colorOnSecondary">@color/black</item>

    </style>
    <style name="SettingsButtonViewShareMode">
        <item name="android:layout_gravity">end</item>
        <item name="android:scaleType">center</item>
        <item name="drawableEndCompat">@drawable/ic_sherp_dark</item>
        <item name="android:layout_width">@dimen/padding24</item>
        <item name="android:layout_height">@dimen/padding24</item>
        <item name="android:layout_marginTop">@dimen/padding19</item>
        <item name="android:layout_marginRight">@dimen/padding12</item>
        <item name="android:layout_marginBottom">@dimen/padding18</item>
    </style>
    <style name="SettingsButtonViewHelpMode">
        <item name="android:layout_gravity">end</item>
        <item name="android:scaleType">center</item>
        <item name="drawableEndCompat">@drawable/ic_dark_mode</item>
        <item name="android:layout_width">@dimen/padding24</item>
        <item name="android:layout_height">@dimen/padding24</item>
        <item name="android:layout_marginTop">@dimen/padding19</item>
        <item name="android:layout_marginRight">@dimen/padding12</item>
        <item name="android:layout_marginBottom">@dimen/padding18</item>
    </style>
    <style name="SettingsButtonViewAcceptMode">
        <item name="android:layout_gravity">end</item>
        <item name="android:scaleType">center</item>
        <item name="drawableEndCompat">@drawable/ic_dark_accept</item>
        <item name="android:layout_width">@dimen/padding24</item>
        <item name="android:layout_height">@dimen/padding24</item>
        <item name="android:layout_marginTop">@dimen/padding19</item>
        <item name="android:layout_marginRight">@dimen/padding12</item>
        <item name="android:layout_marginBottom">@dimen/padding18</item>
    </style>
    <style name="SettingsButtonViewArrowMode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/padding12</item>
        <item name="android:src">@drawable/ic_dark_arrow</item>
        <item name="android:padding">@dimen/padding4</item>

    </style>
</resources>
